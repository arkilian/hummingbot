# Hummingbot Deploy Environment Configuration
# Copy this file to .env and update with your values

# ===== Dashboard and API Authentication =====
# Username for Dashboard and API access
HBOT_USERNAME=admin

# Password for Dashboard and API access  
HBOT_PASSWORD=admin

# Configuration password
CONFIG_PASSWORD=admin

# ===== Database Configuration =====
# PostgreSQL password for hummingbot_api user
HBOT_DB_PASSWORD=hummingbot-api

# Full PostgreSQL connection string
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://hbot:hummingbot-api@postgres:5432/hummingbot_api

# ===== MQTT Broker Configuration =====
# MQTT Broker hostname/IP
BROKER_HOST=emqx

# MQTT Broker port
BROKER_PORT=1883

# MQTT Broker username (optional)
BROKER_USERNAME=admin

# MQTT Broker password (optional)
BROKER_PASSWORD=public

# ===== Application Settings =====
# Enable debug mode (true/false)
DEBUG_MODE=false

# Cleanup interval in seconds
CLEANUP_INTERVAL=300

# Feed timeout in seconds
FEED_TIMEOUT=600

# ===== Optional: AWS S3 Configuration =====
# AWS Access Key ID (leave empty if not using S3)
AWS_API_KEY=

# AWS Secret Access Key (leave empty if not using S3)
AWS_SECRET_KEY=

# S3 Bucket name (leave empty if not using S3)
S3_BUCKET=

# ===== Logging =====
# Logging environment (dev/staging/prod)
LOGFIRE_ENV=prod

# ===== Banned Tokens =====
# JSON array of tokens to exclude from trading
BANNED_TOKENS=["NAV","ARS","ETHW","ETHF","NEWT"]

# ===== IMPORTANT SECURITY NOTES =====
# 1. NEVER commit the .env file to version control
# 2. ALWAYS use strong passwords in production
# 3. Change default credentials before deploying
# 4. Use environment-specific values (dev/staging/prod)
# 5. Rotate passwords regularly
# 6. Use secrets management tools for production (AWS Secrets Manager, HashiCorp Vault, etc.)
